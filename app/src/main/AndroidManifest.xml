<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="br.com.adam.adailton.webpostaccess" >

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name="br.com.adam.adailton.webpostaccess.volley.WebAccessController"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".activities.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.ThingsListActivity"
            android:label="@string/title_activity_things_list" >
        </activity>
        <activity
            android:name=".activities.ThingsManagerActivity"
            android:label="@string/title_activity_things_manager" >
        </activity>
    </application>

</manifest>
