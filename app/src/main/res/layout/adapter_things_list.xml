<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/adapter_things_list_layout">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Id"
        android:id="@+id/adapter_textview_semdados"
        android:layout_below="@+id/adapter_textview_name"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Nome"
        android:id="@+id/adapter_textview_name"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/adapter_textview_semdados"
        android:layout_marginLeft="32dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="tipo"
        android:id="@+id/adapter_textview_type"
        android:layout_below="@+id/adapter_textview_name"
        android:layout_alignLeft="@+id/adapter_textview_name"
        android:layout_alignStart="@+id/adapter_textview_name" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Date"
        android:id="@+id/adapter_textview_date"
        android:layout_below="@+id/adapter_textview_type"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
